generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String
}

model Comment {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
}

model Tcode {
  id          Int       @id @default(autoincrement())
  tcodeName   String    @unique
  title       String
  description String?
  image       String?
  chapters    Chapter[] // relation
}


model Chapter {
  id          Int     @id @default(autoincrement())
  filename    String
  name        String
  description String?
  image       String?
  order       Int     @default(0)

  tcodeId     Int
  tcode       Tcode   @relation(fields: [tcodeId], references: [id])

  exercises   Exercise[]

  @@index([tcodeId])
  @@index([filename])
}

model Exercise {
  id          Int     @id @default(autoincrement())
  filename    String
  name        String
  description String?
  image       String?
  order       Int     @default(0)

  chapterId   Int
  chapter     Chapter @relation(fields: [chapterId], references: [id])

  questions   Question[]

  @@index([chapterId])
  @@index([filename])
}

model Question {
  id          Int     @id @default(autoincrement())
  filename    String  @unique
  name        String
  type        String

  exerciseId  Int
  exercise    Exercise @relation(fields: [exerciseId], references: [id])

  @@index([exerciseId])
}
