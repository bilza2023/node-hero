

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Comment {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
}
model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String
}
