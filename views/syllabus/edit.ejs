<%- include('../partials/header') %>
<%- include('../partials/flash') %>

<style>
  body {
    background-color: #1e1e1e;
    color: #e0e0e0;
    font-family: sans-serif;
  }

  .card {
    background: #2c2c2c;
    max-width: 600px;
    margin: 3rem auto;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  label {
    display: block;
    margin-bottom: 1rem;
  }

  input, textarea {
    width: 100%;
    padding: 0.6rem;
    background: #3a3a3a;
    color: #f0f0f0;
    border: 1px solid #555;
    border-radius: 6px;
  }

  button {
    background: #4caf50;
    color: white;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
  }

  a {
    display: inline-block;
    margin-top: 1rem;
    color: #aaa;
    text-decoration: none;
  }

  h2 {
    margin-bottom: 1.5rem;
    color: #fff;
  }
</style>

<div class="card">
  <h2>✏️ Edit Syllabus: <%= tcode.tcodeName %></h2>

  <form method="POST" action="/syllabus/<%= tcode.tcodeName %>/edit">
    <label>
      Title:
      <input name="title" value="<%= tcode.title %>" required />
    </label>

    <label>
      Description (optional):
      <textarea name="description" rows="3"><%= tcode.description || '' %></textarea>
    </label>

    <label>
      Image URL (optional):
      <input name="image" value="<%= tcode.image || '' %>" />
    </label>

    <button type="submit">Save Changes</button>
  </form>

  <a href="/syllabus/<%= tcode.tcodeName %>">← Back to Tree View</a>
</div>
