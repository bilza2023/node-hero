<%- include('../partials/header') %>
<%- include('../partials/flash') %>

<style>
  body {
    background-color: #1f1f1f;
    color: #f0f0f0;
    font-family: system-ui, sans-serif;
  }

  .card {
    background: #2c2c2c;
    max-width: 800px;
    margin: 3rem auto;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }

  ul { list-style-type: none; padding-left: 1rem; }
  li { margin-bottom: 0.4rem; }
  .chapter { font-weight: bold; color: #88e188; }
  .exercise { margin-left: 1rem; color: #ffc066; }
  .question { margin-left: 2rem; color: #ddd; font-style: italic; }

  h2 {
    margin-bottom: 1.5rem;
    font-weight: normal;
    color: #eaeaea;
  }

  .alert {
    background: #444;
    color: #ffc107;
    padding: 1rem;
    border-radius: 8px;
    margin-top: 1rem;
  }
</style>

<div class="card">

  <div style="margin-bottom: 1rem;">
    <a href="/chapters/new?tcode=<%= tcode.tcodeName %>" style="color: #6dbf73; font-size: 0.9rem; margin-right: 1.5rem;">
      âž• Create New Chapter
    </a>
    <a href="/exercises/new?chapter=CHAPTER_ID_HERE" style="color: #6dbf73; font-size: 0.9rem;">
      âž• Create New Exercise (select a chapter below)
    </a>
  </div>
  


  <h2>ðŸ“˜ Syllabus Tree: <%= tcode.tcodeName %> â€” <%= tcode.title %></h2>

  <% if (tcode.chapters.length === 0) { %>
    <div class="alert">No chapters defined yet.</div>
  <% } else { %>
    <ul>
      <% tcode.chapters.forEach(chapter => { %>
        <li class="chapter">
          <%= chapter.title %>
          <ul>
            <% (chapter.exercises || []).forEach(exercise => { %>
              <li class="exercise">
                <%= exercise.title %>
                <ul>
                  <% (exercise.questions || []).forEach(question => { %>
                    <li class="question">
                      <%= question.title %>
                    </li>
                  <% }); %>
                </ul>
              </li>
            <% }); %>
          </ul>
        </li>
      <% }); %>
    </ul>
  <% } %>
</div>

<script>
  const tcode = <%- JSON.stringify(tcode, null, 2) %>;
  console.log('ðŸ“¦ tcode:', tcode);
</script>
