<!-- views/syllabus/create.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Create New Syllabus</title>
</head>
<body>
  <h1>Create a New Syllabus</h1>

  <form action="/syllabus/create" method="POST">
    <label>Tcode Name: <input type="text" name="tcodeName" required></label><br>
    <label>Filename (slug): <input type="text" name="filename" required></label><br>
    <label>Description: <input type="text" name="description"></label><br>
    <label>Image Path: <input type="text" name="image"></label><br>
    <button type="submit">Create Syllabus</button>
  </form>

  <a href="/">Back to Dashboard</a>
</body>
</html>
