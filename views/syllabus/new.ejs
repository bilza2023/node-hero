<%- include('../partials/header') %>
<%- include('../partials/flash') %>

<style>
  body {
    background-color: #1f1f1f;
    color: #f0f0f0;
    font-family: system-ui, sans-serif;
  }

  .card {
    background: #2c2c2c;
    max-width: 600px;
    margin: 3rem auto;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }

  label {
    display: block;
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  input, textarea {
    width: 100%;
    padding: 0.6rem;
    background: #3b3b3b;
    color: #eee;
    border: 1px solid #555;
    border-radius: 6px;
    font-size: 1rem;
  }

  input:focus, textarea:focus {
    outline: none;
    border-color: #6dbf73;
  }

  button {
    background: #4caf50;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    color: white;
    font-weight: bold;
    font-size: 1rem;
    cursor: pointer;
    margin-top: 1rem;
  }

  a {
    display: inline-block;
    margin-top: 1.5rem;
    color: #bbb;
    text-decoration: none;
    font-size: 0.9rem;
  }

  h2 {
    margin-bottom: 1.5rem;
    font-weight: normal;
    color: #eaeaea;
  }
</style>

<div class="card">
  <h2>➕ Create New Syllabus</h2>

  <form method="POST" action="/syllabus/new">
    <label>
      Tcode ID (e.g., fbise9physics):
      <input name="tcodeName" required pattern="[a-z0-9\\-]+" title="lowercase letters, numbers, hyphens only" />
    </label>

    <label>
      Title:
      <input name="title" required />
    </label>

    <label>
      Description (optional):
      <textarea name="description" rows="3"></textarea>
    </label>

    <label>
      Image URL (optional):
      <input name="image" placeholder="/pivot/yourfile.webp" />
    </label>

    <button type="submit">Create Syllabus</button>
  </form>

  <a href="/syllabus">← Back to list</a>
</div>
