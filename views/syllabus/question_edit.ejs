<%- include('../partials/header') %>
<%- include('../partials/flash') %>

<style>
  body {
    background-color: #1f1f1f;
    color: #f0f0f0;
    font-family: system-ui, sans-serif;
    line-height: 1.6;
  }

  .card {
    background: #2c2c2c;
    max-width: 600px;
    margin: 3rem auto;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }

  h1 {
    font-size: 1.3rem;
    color: #eaeaea;
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  input, select {
    width: 100%;
    padding: 0.6rem;
    background: #3b3b3b;
    color: #eee;
    border: 1px solid #555;
    border-radius: 6px;
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  input:focus, select:focus {
    outline: none;
    border-color: #6dbf73;
  }

  button {
    background: #4caf50;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    color: white;
    font-weight: bold;
    font-size: 1rem;
    cursor: pointer;
  }

  a {
    display: inline-block;
    margin-top: 1.5rem;
    color: #bbb;
    text-decoration: none;
    font-size: 0.9rem;
  }
</style>

<div class="card">
  <h1>➕ Add Question to: <%= exercise.filename %></h1>

  <form method="POST" action="/syllabus/question/new">

    <label>Question Filename:</label>
    <input name="filename" required>

    <label>Preview Text:</label>
    <input name="name">

    <label>Question Type:</label>
    <select name="type" required>
      <option value="slide">Slide</option>
      <option value="mcq">MCQ</option>
      <option value="note">Note</option>
    </select>

    <input type="hidden" name="chapter" value="<%= chapter.filename %>">
    <input type="hidden" name="exercise" value="<%= exercise.filename %>">

    <button type="submit">Create Question</button>
  </form>

  <a href="/syllabus/<%= tcode.tcodeName %>">← Back to Tree View</a>
</div>
