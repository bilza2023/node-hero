<!DOCTYPE html>
<html>
<head>
  <title>Uploaded Files</title>
  <style>
    body {
      background-color: #1e1e1e;
      color: #f0f0f0;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 2rem;
    }

    h2 {
      text-align: center;
      margin-bottom: 2rem;
    }

    .uploads-list {
      max-width: 800px;
      margin: 0 auto;
      background: #2d2d2d;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.4);
    }

    .uploads-list ul {
      list-style-type: none;
      padding-left: 0;
    }

    .uploads-list li {
      background: #1e1e1e;
      margin-bottom: 1rem;
      padding: 1rem;
      border: 1px solid #555;
      border-radius: 6px;
    }

    .uploads-list a {
      color: #00bfff;
      text-decoration: none;
    }

    .uploads-list a:hover {
      text-decoration: underline;
    }

    .upload-meta {
      font-size: 0.85rem;
      color: #ccc;
    }
  </style>
</head>
<body>
  <%- include('./partials/navbar') %>

  <h2>All Uploaded Files and Images</h2>
  <div class="uploads-list">
    <ul>
      <% uploads.forEach(upload => { %>
        <li>
          <strong><%= upload.original %></strong>
          <div class="upload-meta">
            Type: <%= upload.type %> |
            By: <%= upload.uploader %> |
            Uploaded: <%= new Date(upload.uploadedAt).toLocaleString() %>
          </div>
          <a href="/uploads/<%= upload.type === 'file' ? 'files' : 'images' %>/<%= upload.name %>">Download</a>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
