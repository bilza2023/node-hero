<li class="chapter">
    <span><%= chapter.name %></span>
    <a href="/syllabus/<%= tcode.tcodeName %>/chapter/<%= chapter.id %>/edit" class="inline-btn">✏️ Edit</a>
    <a href="/syllabus/<%= tcode.tcodeName %>/chapter/<%= chapter.id %>/exercise/new" class="inline-btn">📄 Add Exercise</a>
  
    <ul>
      <% (chapter.exercises || []).forEach(exercise => { %>
        <%- include('./exercise_row', { tcode, chapter, exercise }) %>
      <% }) %>
    </ul>
  </li>
  