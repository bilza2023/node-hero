<div class="topbar">
  <a href="/syllabus/new">âž• Create New Syllabus</a>
</div>

<div class="card-grid">
  <% for (const t of tcodes) { %>
    <a class="card" href="/syllabus/<%= t.tcodeName %>">
      <div class="card-title"><%= t.tcodeName %></div>
      <div class="card-sub"><%= t.title %></div>
    </a>
  <% } %>
</div>
