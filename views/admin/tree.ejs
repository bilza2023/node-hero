<%- include('../partials/header') %>
<%- include('../partials/flash') %>

<style>
  body {
    background-color: #1f1f1f;
    color: #f0f0f0;
    font-family: system-ui, sans-serif;
    line-height: 1.6;
  }

  .card {
    background: #2c2c2c;
    max-width: 800px;
    margin: 3rem auto;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }

  ul { list-style-type: none; padding-left: 1rem; }
  li { margin-bottom: 0.4rem; }
  .chapter { font-weight: bold; color: #88e188; }
  .exercise { margin-left: 1rem; color: #ffc066; }
  .question { margin-left: 2rem; color: #ddd; font-style: italic; }

  .inline-btn {
    display: inline-block;
    border: 1px solid #555;
    padding: 0.2rem 0.5rem;
    margin-left: 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    color: #bbb;
    text-decoration: none;
  }

  .inline-btn:hover {
    background-color: #333;
    color: #fff;
  }

  h2 {
    margin-bottom: 1.5rem;
    font-weight: normal;
    color: #eaeaea;
  }

  .alert {
    background: #444;
    color: #ffc107;
    padding: 1rem;
    border-radius: 8px;
    margin-top: 1rem;
  }

  a.button-link {
    color: #6dbf73;
    font-size: 0.9rem;
    margin-right: 1.5rem;
    text-decoration: none;
  }
</style>

<div class="card">
  <div style="margin-bottom: 1rem;">
    <a href="/syllabus/<%= tcode.tcodeName %>/chapter/new" class="button-link">
      âž• Create New Chapter
    </a>
  </div>

  <h2>ðŸ“˜ Syllabus Tree: <%= tcode.tcodeName %> â€” <%= tcode.title %></h2>

  <% if (tcode.chapters.length === 0) { %>
    <div class="alert">No chapters defined yet.</div>
  <% } else { %>
    <ul>
      <% tcode.chapters.forEach(chapter => { %>
        <%- include('partials/chapter_row', { tcode, chapter }) %>
      <% }) %>
    </ul>
  <% } %>
</div>

<script>
  function toggle(id) {
    const el = document.getElementById(id);
    const isHidden = el.style.display === 'none';
    el.style.display = isHidden ? 'block' : 'none';
  }
</script>
